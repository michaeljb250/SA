<style>
.slider {
  width: 100%;
  height: 2px;
  margin: 10px 0;
  background-color: #ddd;
  -webkit-appearance: none;
  appearance: none;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 15px;
  height: 15px;
  background-color: pink;
  cursor: pointer;
}

.slider::-moz-range-thumb {
  width: 15px;
  height: 15px;
  background-color: pink;
  cursor: pointer;
}

/* Style for the buttons */
button {
  background-color: pink;
  border: none;
  color: white;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 10px;
  cursor: pointer;
  border-radius: 5px;
}

button:hover {
  background-color: yellow;
}
/* Style for the container holding sliders and buttons */
.run {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  height: 70vh;
</style>
<script src="https://unpkg.com/@hotwired/stimulus@3.0.0/dist/stimulus.umd.js"></script>
 <div data-controller="reverb">
     <h1>Tone.js Audio Player</h1>
     <div class="conter">
      <h1 id="text"></h1>
      <div class="button-container">
        <button id="back-btn">Back</button>
        <button id="next-btn">Next</button>
      </div>
      <div id="textt-box">
        <p id="textt"></p>
      </div>
<div class="run">
      <div class="reverb-container">
  <div class="reverb-slider-container">
    <input type="range" min="0" max="1" step="0.1" value="0" id="reverbSlider">
  </div>
  <button id="startBtn" class="reverb-btn">Start</button>
  <button id="stopBtn" class="reverb-btn">Stop</button>
 </div>
</div>
