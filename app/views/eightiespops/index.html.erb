.slideshow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.slide {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation-duration: 30s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
}

.slide:nth-child(1) {
  animation-name: fade-1;
  animation-delay: 0s;
}

.slide:nth-child(2) {
  animation-name: fade-2;
  animation-delay: 30s;
}

.slide:nth-child(3) {
  animation-name: fade-3;
  animation-delay: 50s;
}

@keyframes fade-1 {
  0% {
    opacity: 0;
  }
  25% {
    opacity: 1;
  }
  75% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

