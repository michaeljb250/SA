<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-color: #282c34;
    color: #61dafb;
  }

  #grid-container {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    gap: 10px;
    margin-top: 20px;
  }

  .grid-item {
    width: 40px;
    height: 40px;
    border: 1px solid #61dafb;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .grid-item.active {
    background-color: #bada55 !important;
  }

  /* Different colors for notes */
  .note-C {
    background-color: #FFD700;
  }

  .note-D {
    background-color: #FFA500;
  }

  .note-E {
    background-color: #FF6347;
  }

  .note-F {
    background-color: #8A2BE2;
  }

  .note-G {
    background-color: #00CED1;
  }

  .note-A {
    background-color: #3CB371;
  }

  .note-B {
    background-color: #9370DB;
  }

  .note-C2 {
    background-color: #FFD700;
  }

  button {
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 16px;
    color: #282c34;
    background-color: #61dafb;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  button:hover {
    background-color: #282c34;
    color: #61dafb;
  }

  label {
    margin-top: 20px;
    font-size: 16px;
  }

  input {
    margin-top: 10px;
    width: 300px;
    -webkit-appearance: none;
    appearance: none;
    height: 10px;
    background: #61dafb;
    outline: none;
    opacity: 0.7;
    -webkit-transition: .2s;
    transition: opacity .2s;
    border-radius: 5px;
  }

  input:hover {
    opacity: 1;
  }

  span {
    margin-left: 5px;
    font-size: 14px;
  }

  #scale-selector {
    font-size: 16px;
    padding: 10px;
    border: 2px solid #61dafb;
    border-radius: 5px;
    background-color: #282c34;
    color: #61dafb;
    outline: none;
  }

  #scale-selector:hover {
    border-color: #282c34;
    background-color: #61dafb;
    color: #282c34;
  }

  p {
    font-size: 18px;
    line-height: 1.5;
    color: black;
    margin-bottom: 30px;
    font-family: 'Courier New', Courier, monospace;
  }
