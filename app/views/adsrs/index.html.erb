<style>
/* Base keyboard layout */
#keyboard {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  font-family: 'Courier New', Courier, monospace;
}

#keyboard button {
  width: 50px;
  height: 100px;
  margin: 5px;
  border: none;
  border-radius: 5px;
  background-color: #eee;
  color: #333;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 1px 1px 3px rgba(0,0,0,0.3);
  transition: all 0.1s ease;
  font-family: 'Courier New', Courier, monospace;
}

#keyboard button:active {
  transform: translateY(2px);
  box-shadow: 0px 0px 2px rgba(0,0,0,0.3);
  background-color: #ddd;
  font-family: 'Courier New', Courier, monospace;
}

/* Responsive adjustments */
@media (max-width: 600px) {
  #keyboard {
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
    padding: 10px;
  }

  #keyboard button {
    width: 40px;
    height: 80px;
    font-size: 16px;
  }

  /* Limit the number of keys shown */
  #keyboard button:nth-child(n+7) {
    display: none;
  }
}

input[type="range"] {
  -webkit-appearance: none;
  height: 8px;
  background-color: #ddd;
  outline: none;
  border-radius: 10px;
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  width: 200px;
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background-color: black;
  margin-top: -6px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

input[type="range"]::-moz-range-thumb {
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background-color: #2196f3;
  margin-top: -6px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

#texttt-box {
  width: 300px;
  height: 80px;
  position: fixed;
  left: 80%;
  top: 0%;
  transform: translateX(-50%);
}

#texttt {
  font-size: 16px;
  text-align: center;
  margin-top: 250px;
  opacity: 0;
  transition: opacity 1s ease-in-out;
  font-family: 'Courier New', Courier, monospace;
}

/* Additional media queries for smaller screens */
@media (max-width: 400px) {
  #keyboard button {
    width: 30px;
    height: 60px;
    font-size: 14px;
  }
}
</style>
<div class="conter">
<h1 id="text"></h1>
<div class="button-container">
  <button id="back-btn">Back</button>
  <button id="next-btn">Next</button>
</div>
<div id="texttt-box">
  <p id="texttt"></p>
</div>
<div id="synth-container">
<div data-controller="adsr">
<div id="keyboard">
</div>
</div>
<div id="controls">
<div class="control">
  <label>Attack:</label>
  <input type="range" min="0" max="1" step="0.01" value="0" id="attack-slider">
</div>
<div class="control">
  <label>Decay:</label>
  <input type="range" min="0" max="1" step="0.01" value="0.5" id="decay-slider">
</div>
<div class="control">
  <label>Sustain:</label>
  <input type="range" min="0" max="1" step="0.01" value="0.5" id="sustain-slider">
</div>
<div class="control">
  <label>Release:</label>
  <input type="range" min="0" max="1" step="0.01" value="0.5" id="release-slider">
</div>
</div>
</div>
</div>
