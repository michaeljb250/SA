    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guess the Note - Major Scale</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* styles.css */
        body {
            font-family: monospace, Arial, sans-serif;
            text-align: center;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        h1 {
            padding-top: 30px;
            margin-top: 20px;
            padding-bottom: 80px;
            font-family: 'Courier New', monospace;
        }

        button {
            font-family: inherit;
            background-color: black;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #2980b9;
        }

        #score {
            font-weight: bold;
        }

        .guessContainer {
            margin-top: 20px;
        }

        .guessOption {
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            cursor: pointer;
        }

        .guessOption.correct {
            background-color: green; /* Correct guess */
            color: white;
        }

        .guessOption.incorrect {
            background-color: red; /* Incorrect guess */
            color: white;
        }
    </style>
</head>
<body>
<div data-controller="majorscalegame">
    <h1>Guess the Note - Major Scale</h1>

    <label for="scaleSelect">Select a Major Scale:</label>
    <select id="scaleSelect">
        <option value="C">C</option>
        <option value="D">D</option>
        <option value="E">E</option>
        <option value="F">F</option>
        <option value="G">G</option>
        <option value="A">A</option>
        <option value="B">B</option>
    </select>

    <button id="playButton">Play</button>
    <p>Score: <span id="score">0</span></p>
    <p>High Score: <span id="highScore">0</span></p>
    <p id="guessText">Guess</p> <!-- Dynamic guessing prompt -->


    <div class="guessContainer">
        <button class="guessOption"></button>
        <button class="guessOption"></button>
        <button class="guessOption"></button>
        <button class="guessOption"></button>
        <button class="guessOption"></button>
        <button class="guessOption"></button>
        <button class="guessOption"></button>
    </div>
</div>
</body>
