  font-family: "Courier New", monospace;
  z-index: -1;
}

.slideshow {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.slide {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 150px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  animation-duration: 10s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
}

.slide:nth-child(1) {
  animation-name: fade-1;
  animation-delay: 0s;
}

.slide:nth-child(2) {
  animation-name: fade-2;
  animation-delay: 10s;
}

.slide:nth-child(3) {
  animation-name: fade-3;
  animation-delay: 20s;
}

@keyframes fade-1 {
  0% {
    opacity: 0;
  }
  25% {
    opacity: 1;
  }
  75% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes fade-2 {
  0% {
