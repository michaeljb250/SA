<!-- app/views/access_codes/new.html.erb -->
<h2 class="form-heading"></h2>

<%= form_with url: access_codes_path, method: :post, html: { class: 'access-code-form' } do |f| %>
  <div class="form-group">
    <%= f.label :code, "Institutional Access Code", class: 'form-label' %><br>
    <%= f.text_field :code, class: 'form-input' %><br><br>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'form-submit' %>
  </div>
<% end %>

<!-- Add your custom styles here -->
<style>
  /* Style for the heading */
  .form-heading {
    font-family: 'Courier New', Courier, monospace;
    text-align: center;
    margin-bottom: 20px;
    font-size: 24px;
    color: #333;
  }

  /* Style for the form container */
  .access-code-form {
    font-family: 'Courier New', Courier, monospace;
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f4f4f9;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Style for the label */
  .form-label {
    font-size: 18px;
    font-family: 'Courier New', Courier, monospace;
    color: #333;
  }

  /* Style for the text input */
  .form-input {
    font-family: 'Courier New', Courier, monospace;
    font-size: 16px;
    padding: 10px;
    width: 100%;
    max-width: 300px;
    border-radius: 5px;
    border: 1px solid #ccc;
    margin-top: 5px;
  }

  /* Style for the submit button */
  .form-submit {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 5px;
    width: 100%;
    max-width: 320px;
    margin-top: 20px;
  }

  /* Hover effect for the submit button */
  .form-submit:hover {
    background-color: #45a049;
  }

  /* Style for form groups (spacing between elements) */
  .form-group {
    text-align: center;
  }

  /* Responsive design: make form container and inputs adjust for smaller screens */
  @media (max-width: 600px) {
    .access-code-form {
      padding: 15px;
      width: 90%; /* Ensure it fits smaller screens */
    }

    .form-heading {
      font-size: 20px; /* Adjust heading size for smaller screens */
    }

    .form-input {
      max-width: 100%; /* Allow input to use full width on small screens */
    }

    .form-submit {
      max-width: 100%; /* Ensure button stretches across the screen on mobile */
    }
  }
</style>
