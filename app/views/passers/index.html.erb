<style>
.slider {
  width: 100%;
  height: 2px;
  margin: 10px 0;
  background-color: #ddd;
  -webkit-appearance: none;
  appearance: none;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 15px;
  height: 15px;
  background-color: pink;
  cursor: pointer;
}

.slider::-moz-range-thumb {
  width: 15px;
  height: 15px;
  background-color: pink;
  cursor: pointer;
}

/* Style for the buttons */
button {
  background-color: pink;
  border: none;
  color: white;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 10px;
  cursor: pointer;
  border-radius: 5px;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  height: 70vh;
}
</style>
<body>
<script src="https://unpkg.com/@hotwired/stimulus@3.0.0/dist/stimulus.umd.js"></script>
 <div data-controller="pass">
     <h1>Tone.js Audio Player</h1>
     <div class="conter">
      <h1 id="text"></h1>
      <div class="button-container">
        <button id="back-btn">Back</button>
        <button id="next-btn">Next</button>
      </div>
      <div id="textt-box">
        <p id="textt"></p>
      </div>
      <div class="container">
      <label for="lowpass-slider">Lowpass</label>
      <input class="slider"
      type="range"
      id="lowpass-slider"
      min="0"
      max="20000"
      step="10"
      value="20000"/>
      <label for="highpass-slider">Highpass</label>
    <input class="slider"
      type="range"
      id="highpass-slider"
      min="0"
      max="20000"
      step="10"
      value="10"/>
    <button id="start-btn">Start</button>
    <button id="stop-btn">Stop</button>
    <script src="app.js"></script>
  </div>
</body>
